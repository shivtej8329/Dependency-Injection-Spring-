<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="commonFields" abstract="true">
		<property name="url" value="jdbc:mysql://localhost:3306" />
		<property name="countryCode" value="12345" />
	</bean>

	<bean id="employee" class="com.mainapp.Employee"
		parent="commonFields">
		<property name="id" value="2222" />
	</bean>

	<bean id="manager" class="com.mainapp.Manager"
		parent="commonFields">
		<property name="mid" value="4545" />
	</bean>

	<bean id="student" class="com.mainapp.Student"
		parent="commonFields">
		<property name="roll" value="5" />
	</bean>

	<!-- <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" 
		/> -->

</beans>